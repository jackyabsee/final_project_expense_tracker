{
    "compilerOptions": {
      //"pitDir" for deployment
      "outDir": "dist",
      "strict": true,
      "module": "commonjs",
      "target": "ES6",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "incremental": true,
    //   "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
    },
    "exclude": ["node_modules", "dist", "scripts"]
  }